<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationViewOnBoardingPageTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.8"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie_qr_scan.json"
        app:lottie_loop="true"
        app:lottie_repeatMode="restart" />

    <TextView
        android:id="@+id/textViewOnBoardingPageTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_ui_display_medium"
        android:text="@string/msg_onboarding_page_two"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/cardViewNextOnBoardingPageTwo"
        app:layout_constraintEnd_toEndOf="@id/lottieAnimationViewOnBoardingPageTwo"
        app:layout_constraintStart_toStartOf="@id/lottieAnimationViewOnBoardingPageTwo"
        app:layout_constraintTop_toBottomOf="@id/lottieAnimationViewOnBoardingPageTwo" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewNextOnBoardingPageTwo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_right" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>