<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewOnBoardingPageOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:fontFamily="@font/sf_ui_display_medium"
        android:text="@string/msg_onboarding_page_one"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/imageViewOnBoardingPageOne"
        app:layout_constraintEnd_toEndOf="@id/imageViewOnBoardingPageOne"
        app:layout_constraintStart_toStartOf="@id/imageViewOnBoardingPageOne"
        app:layout_constraintTop_toTopOf="parent"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/imageViewOnBoardingPageOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:src="@drawable/shopping_woman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintWidth_percent="0.8"
        tools:alpha="1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewNextOnBoardingPageOne"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:alpha="0"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        tools:alpha="1">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_right" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>